@model Emp_Models.Skill

@{
    ViewData["Title"] = "CreateSkill";
}

<style>
    .col-md-12.form-box {
        max-width: 500px;
        margin: 0 auto;
        -webkit-box-shadow: 0 0 0 0 rgba(90, 113, 208, 0.11), 0 4px 16px 0 rgba(167, 175, 183, 0.3);
        border-radius: 10px;
    }
</style>

<div class="container">
    <h4 class="text-center">Create New Skill</h4>
    <div class="row clearfix">
        <div class="col-md-12 form-box p-4 mt-5">

            <form asp-action="Create" class="form-group">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="SkillName" class="control-label"></label>
                    <input asp-for="SkillName" class="form-control" />
                    <span asp-validation-for="SkillName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="SkillDescription" class="control-label pt-3"></label>
                    <input asp-for="SkillDescription" class="form-control" />
                    <span asp-validation-for="SkillDescription" class="text-danger"></span>
                </div>
                <br />
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>

            <div class="pt-3">
                <a asp-action="Index"><i class="fa-solid fa-arrow-left"></i>Back to List</a>
            </div>
        </div>

    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
