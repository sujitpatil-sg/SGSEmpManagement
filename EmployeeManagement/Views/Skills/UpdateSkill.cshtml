@model Emp_Models.Skill

@{
    ViewData["Title"] = "UpdateSkill";
}
<style>
    .col-md-12.form-box {
        max-width: 500px;
        margin: 0 auto;
        -webkit-box-shadow: 0 0 0 0 rgba(90, 113, 208, 0.11), 0 4px 16px 0 rgba(167, 175, 183, 0.3);
        border-radius: 10px;
    }
</style>

<div class="row">
    <h4 class="text-center">Update Skill</h4>
    <div class="col-md-12 form-box p-4 mt-4">
        <form asp-action="UpdateSkill">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="SkillName" class="control-label"></label>
                <input asp-for="SkillName" class="form-control" />
                <span asp-validation-for="SkillName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SkillDescription" class="control-label pt-3"></label>
                <input asp-for="SkillDescription" class="form-control" />
                <span asp-validation-for="SkillDescription" class="text-danger"></span>
            </div>

            <div class="form-group mt-4">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
        <div class="back pt-3">
            <a asp-action="Index">Back to List</a>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
